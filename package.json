{
	"name": "gitshare",
	"displayName": "gitshare",
	"description": "An extension that allows you to share what you're coding to your GitHub custom status - automatically.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "GitShare",
			"properties": {
				"gitshare.token": {
					"type": "string",
					"default": "",
					"description": "Your generated GitHub personal access token."
				},
				"gitshare.emoji": {
					"type": "string",
					"default": ":computer:",
					"description": "GitHub emoji to use in status."
				},
				"gitshare.branding": {
					"type": "boolean",
					"default": true,
					"description": "Show credit text at the end of status (if space permits)."
				},
				"gitshare.showfile": {
					"type": "boolean",
					"default": true,
					"description": "Show the current file you are editing (if space permits)."
				}
			}
		},
		"commands": [
			{
				"command": "gitshare.toggle",
				"category": "GitShare",
				"title": "Toggle GitHub Status Sharing"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/express": "^4.17.11",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"express": "^4.17.1",
		"graphql": "^15.5.0",
		"graphql-request": "^3.4.0"
	}
}
